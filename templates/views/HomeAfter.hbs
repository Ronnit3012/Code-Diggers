<style>
    .carousel-open:checked+.carousel-item {
        position: static;
        opacity: 100;
    }

    .carousel-item {
        -webkit-transition: opacity 0.3s ease-out;
        transition: opacity 0.3s ease-out;
    }

    #carousel-1:checked~.control-1,
    #carousel-2:checked~.control-2,
    #carousel-3:checked~.control-3 {
        display: block;
    }

    .carousel-indicators {
        list-style: none;
        margin: 0;
        padding: 0;
        position: absolute;
        bottom: 2%;
        left: 0;
        right: 0;
        text-align: center;
        z-index: 10;
    }

    #carousel-1:checked~.control-1~.carousel-indicators li:nth-child(1) .carousel-bullet,
    #carousel-2:checked~.control-2~.carousel-indicators li:nth-child(2) .carousel-bullet,
    #carousel-3:checked~.control-3~.carousel-indicators li:nth-child(3) .carousel-bullet {
        color: #a855f7;
        /*Set to match the Tailwind colour you want the active one to be */
    }

    .larger-p {
        font-size: 3rem;
        font-family: Georgia, 'Times New Roman', Times, serif;
        line-height: 1.2;
        padding-top: 30px;
        color: #a855f7;
    }
</style>

<body class="flex flex-col min-h-screen font-body">
    {{!-- <div class="flex flex-col min-h-screen"> --}}
        <div class="grow">
            {{>headerAfter}}

            <section class="">
                <main class="mx-auto px-10 py-5 text-lg">
                    <div>
                        <div class="bg-white leading-normal tracking-normal m-0.5 sm:m-2 w-auto sm:ml-20 sm:mr-5">
                            <div class="carousel relative shadow-2xl bg-black">
                                <div class="carousel-inner relative overflow-hidden" style="background-color: #ede9fe;">
                                    <!--Slide 1-->
                                    <input class="carousel-open" style="display: none;" type="radio" id="carousel-1"
                                        name="carousel" aria-hidden="true" hidden="" checked="checked">
                                    <div class="carousel-item absolute opacity-0 w-fit flex justify-between gap-4"
                                        style="height: 60vh !important;">
                                        <img class="block bg-black h-full" src="img/explore1.jpg" alt="">
                                        <div class="p-10 pt-17" >
                                            <p class="larger-p">Search your best partners for different projects and explore various domains of your interest easily!</p>
                                        </div>
                                    </div>
                                    <label for="carousel-3"
                                        class="prev control-1 w-10 h-10 ml-2 md:ml-10 absolute cursor-pointer hidden text-3xl font-bold text-black hover:text-white rounded-full bg-white hover:bg-blue-700 leading-tight text-center z-10 inset-y-0 left-0 my-auto">‹</label>
                                    <label for="carousel-2"
